<% if @book.errors.any? %>
  <div class="error col-12">
      <div>errorがあります</div>
      <% @book.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end %>
  </div>
<% end %>

<div class="col-6 offset-3">
  <h1 class="mt-4">Editing Book</h1>
  <%= form_with model:@book, local:true do |f| %>
    <div>
      <label class="form-label">Title</label>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div>
      <label class="form-label">Opinion</label>
      <%= f.text_area :body, class: "form-control" %>
    </div>
    <%= f.submit 'Update Book', class: "btn btn-success btn-block mt-3" %><br>
  <% end %>
  <%= link_to 'Show', book_path(@book.id) %> | <%= link_to 'Back', books_path %>
</div>
