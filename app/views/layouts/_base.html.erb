

    <div class="col-4">
      <!-- ユーザーの情報 -->
      <h3 class="mt-4" >User info</h3>
      <table class="table">
        <tr>
          <th><%= attachment_image_tag user, :profile_image, format: 'jpeg', size: "200x200" %></th>
          <th></th>
        </tr>
        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= user.introduction %><br></th>
        </tr>
      </table>
      <%= link_to 'プロフィール変更', edit_user_path(user.id), class: "btn btn-outline-primary btn-block mb-5" %>
      
      
      <!-- 新規本投稿 -->
      <h2>New book</h2>
      <%= form_with model: book, local:true do |f| %>
        <div>
          <label class="form-label">Title</label>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div>
          <label class="form-label">Opinion</label>
          <%= f.text_area :body, class: "form-control" %>
        </div>
        <%= f.submit 'Create Book', class: "btn btn-success btn-block mt-3" %>
      <% end %>
    </div>
 