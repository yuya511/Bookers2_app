<% if book.errors.any? %>
  <div class="error col-12">
      <div>errorがあります</div>
      <% book.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end %>
  </div>
<% end %>

    <div class="col-md-3">
      <!-- ユーザーの情報 -->
      <h3 class="mt-4" >User info</h3>
      <table class="table">
        <tr>
          <th><%= attachment_image_tag user, :profile_image, fallback: "サラリーマン.png", format: 'jpeg', size: "200x200" %></th>
          <th></th>
        </tr>
        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= user.introduction %><br></th>
        </tr>
      </table>
      <%= link_to edit_user_path(user.id), class: "btn btn-outline-primary btn-block mb-5" do %>
        <i class="fas fa-user-cog">プロフィールの変更</i>
      <% end %>
      
      
      <!-- 新規本投稿 -->
      <h2>New book</h2>
      <%= form_with model: book, local:true do |f| %>
        <div>
          <label class="form-label">Title</label>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div>
          <label class="form-label">Opinion</label>
          <%= f.text_area :body, class: "form-control" %>
        </div>
        <%= f.submit 'Create Book', class: "btn btn-success btn-block mt-3" %>
      <% end %>
    </div>
 