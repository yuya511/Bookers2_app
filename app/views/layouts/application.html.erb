<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class = "d-flex flex-column vh-100">
    <header class = "shadow-sm bg-dark ">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <a class="navbar-brand p-3 text-info" href="/"><h3>Bookers</h3></a>
          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to "Home", user_path(current_user.id), class: 'nav-link text-primary' %>
              </li>
              <li class="nav-item">
                <%= link_to "Users", users_path, class: 'nav-link text-primary' %>
              </li>
              <li class="nav-item">
                <%= link_to "Books", books_path, class: 'nav-link text-primary' %>
              </li>
              <li class="nav-item">
                <%= link_to "logout", destroy_user_session_path, method: :delete, class: 'nav-link text-primary' %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "Home", root_path, class: 'nav-link text-primary' %>
              </li>
              <li class="nav-item">
                <%= link_to "About", about_path, class: 'nav-link text-primary' %>
              </li>
              <li class="nav-item">
                <%= link_to "sign_up", new_user_registration_path, class: 'nav-link text-primary' %>
              </li>
              <li class="nav-item">
                <%= link_to "login", new_user_session_path, class: 'nav-link text-primary' %>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>
    <div class="container">
      <div class="row">
        <%= yield %>
      </div>
    </div>
    <footer>
      <div class="text-center mt-5 col-12">CopyRight Infratop.inc</div>
    </footer>
  </body>
</html>
